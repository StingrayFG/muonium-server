generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user {
  uuid              String    
  login             String    @id
  password          String 
}

model drive {
  uuid              String    @id
  ownerUuid         String    

  spaceTotal        Int
  spaceUsed         Int
}

model bookmark {
  ownerUuid         String    
  folderUuid        String 
  position          Int 

  @@id([ownerUuid, folderUuid])
}


model file {
  name              String
  nameExtension     String
  size              Int

  creationDate      DateTime? @db.Timestamptz(3)  @default(dbgenerated("NOW()")) 
  modificationDate  DateTime? @db.Timestamptz(3)  @default(dbgenerated("NOW()")) 

  uuid              String    @id
  ownerUuid         String 
  driveUuid         String
  parentUuid        String? 

  isRemoved         Boolean   @default(false)
}

model folder {
  name              String
  size              Int       @default(0)

  creationDate      DateTime? @db.Timestamptz(3)  @default(dbgenerated("NOW()")) 
  modificationDate  DateTime? @db.Timestamptz(3)  @default(dbgenerated("NOW()")) 

  uuid              String    @id
  ownerUuid         String 
  driveUuid         String
  parentUuid        String? 

  absolutePath      String?
  isRemoved         Boolean   @default(false)
  isRemovedAsChild  Boolean   @default(false)
}
